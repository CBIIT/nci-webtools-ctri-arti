<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error Log Report</title>
  </head>

  <body
    style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;"
  >
    <table
      role="presentation"
      width="100%"
      cellpadding="0"
      cellspacing="0"
      style="padding: 32px 16px;"
    >
      <tr>
        <td align="center">
          <table
            role="presentation"
            width="100%"
            cellpadding="0"
            cellspacing="0"
            style="max-width: 600px; background-color: #ffffff; border-radius: 8px; border: 1px solid #e5e5e5; overflow: hidden;"
          >

            <!-- Header -->
            <tr>
              <td
                style="background-color: #171717; padding: 20px 24px; border-bottom: 1px solid #e5e5e5;"
              >
                <table role="presentation" cellpadding="0" cellspacing="0">
                  <tr>
                    <td style="vertical-align: middle; padding-right: 12px;">
                      <div
                        style="width: 40px; height: 40px; background-color: #dc2626; border-radius: 6px; text-align: center; line-height: 40px; font-size: 24px; font-weight: bold; color: #ffffff;"
                      >!</div>
                    </td>
                    <td style="vertical-align: middle;">
                      <h1
                        style="margin: 0; font-size: 18px; font-weight: 600; color: #ffffff;"
                      >{{#if isUserReported}}Issue Reported by a User{{else}}Application Error{{/if}}</h1>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>

            <!-- Version & Timestamp -->
            <tr>
              <td style="padding: 0; border-bottom: 1px solid #e5e5e5;">
                <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
                  <tr>
                    <td
                      width="50%"
                      style="padding: 16px 24px; border-right: 1px solid #e5e5e5; vertical-align: top;"
                    >
                      <table role="presentation" cellpadding="0" cellspacing="0">
                        <tr>
                          <td style="vertical-align: top;">
                            <p
                              style="margin: 0 0 4px 0; font-size: 10px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; color: #737373;"
                            >
                              Version</p>
                            <p
                              style="margin: 0; font-size: 14px; font-weight: 500; color: #171717;"
                            >
                              MVP</p>
                          </td>
                        </tr>
                      </table>
                    </td>
                    <td width="50%" style="padding: 16px 24px; vertical-align: top;">
                      <table role="presentation" cellpadding="0" cellspacing="0">
                        <tr>
                          <td style="vertical-align: top;">
                            <p
                              style="margin: 0 0 4px 0; font-size: 10px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; color: #737373;"
                            >
                              Timestamp</p>
                            <p
                              style="margin: 0; font-size: 14px; font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Monaco, Consolas, monospace; color: #171717;"
                            >
                              {{timestamp}}</p>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>

            <!-- User ID & User Name -->
            <tr>
              <td style="padding: 0; border-bottom: 1px solid #e5e5e5;">
                <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
                  <tr>
                    <td
                      width="50%"
                      style="padding: 16px 24px; border-right: 1px solid #e5e5e5; vertical-align: top;"
                    >
                      <table role="presentation" cellpadding="0" cellspacing="0">
                        <tr>
                          <td style="vertical-align: top;">
                            <p
                              style="margin: 0 0 4px 0; font-size: 10px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; color: #737373;"
                            >
                              User ID</p>
                            <p
                              style="margin: 0; font-size: 14px; font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Monaco, Consolas, monospace; color: #171717; word-break: break-all;"
                            >
                              {{userId}}</p>
                          </td>
                        </tr>
                      </table>
                    </td>
                    <td width="50%" style="padding: 16px 24px; vertical-align: top;">
                      <table role="presentation" cellpadding="0" cellspacing="0">
                        <tr>
                          <td style="vertical-align: top;">
                            <p
                              style="margin: 0 0 4px 0; font-size: 10px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; color: #737373;"
                            >
                              User Name</p>
                            <p
                              style="margin: 0; font-size: 14px; font-weight: 500; color: #171717; word-break: break-all;"
                            >
                              {{userName}}</p>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>

            <!-- Error Details Section -->
            {{#if detailRows}}
              <tr>
                <td style="padding: 16px 24px; border-bottom: 1px solid #e5e5e5;">
                  {{#each detailRows}}
                    <table
                      role="presentation"
                      width="100%"
                      cellpadding="0"
                      cellspacing="0"
                      style="margin-bottom: 12px;"
                    >
                      <tr>
                        <td>
                          <p
                            style="margin: 0 0 4px 0; font-size: 12px; font-weight: 500; color: #737373;"
                          >{{label}}</p>

                          {{#if isMultiline}}
                            <pre
                              style="margin: 4px 0 0 0; padding: 12px; background-color: #f5f5f5; border-radius: 6px; font-size: 12px; font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Monaco, Consolas, monospace; color: #171717; white-space: pre-wrap; word-break: break-all; line-height: 1.5; overflow-x: auto;"
                            >{{value}}</pre>
                          {{else}}
                            <p
                              style="margin: 4px 0 0 0; font-size: 14px; font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Monaco, Consolas, monospace; color: #171717; word-break: break-all;"
                            >
                              {{value}}</p>
                          {{/if}}
                        </td>
                      </tr>
                    </table>
                  {{/each}}

                </td>
              </tr>
            {{/if}}

            <!-- Footer -->
            <tr>
              <td style="background-color: #fafafa; padding: 20px 24px;">
                <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
                  <tr>
                    <td style="text-align: center;">
                      <p style="margin: 0; font-size: 12px; color: #737373; line-height: 1.6;">
                        This is an automated error report generated by the system.<br />
                        Please do not reply to this email.
                      </p>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>

          </table>
        </td>
      </tr>
    </table>
  </body>

</html>