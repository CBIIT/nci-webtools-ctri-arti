{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file .env server.js",
    "start:dev": "node --env-file .env --watch-path=. server.js",
    "test:setup": "npx playwright install chromium",
    "test": "node --env-file test.env --test --test-reporter=tap && npm run test:integration",
    "test:integration": "node --env-file test.env integration.js",
    "cert": "openssl req -x509 -newkey rsa:2048 -nodes -subj '/C=US/ST=State/L=City/O=Organization/CN=localhost' -keyout key.tmp -out cert.tmp && cat key.tmp cert.tmp > key.pem && rm key.tmp cert.tmp",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/eslint/ --report-unused-inline-configs error",
    "lint:ci": "eslint . --max-warnings 0 --report-unused-inline-configs error",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.882.0",
    "@aws-sdk/client-textract": "^3.882.0",
    "@aws-sdk/client-translate": "^3.882.0",
    "@google/genai": "^1.17.0",
    "connect-session-sequelize": "^8.0.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "lodash": "^4.17.21",
    "mammoth": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-forge": "^1.3.1",
    "nodemailer": "^7.0.6",
    "oidc-provider": "^9.5.1",
    "openid-client": "^6.7.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.149",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@arti/eslint-config": "file:../packages/eslint-config",
    "eslint": "^9.35.0",
    "playwright": "^1.55.0",
    "prettier": "3.6.2",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  }
}
