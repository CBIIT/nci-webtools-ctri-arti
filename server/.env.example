# This is an example .env file for the server. Copy this file to .env and fill in the values.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=us-east-1
AWS_REGION=us-east-1

# Enables https (will generate a self-signed certificate)
PORT=443

# Sets the version of the application (available under /api/status)
VERSION=1.0.0

# Skip SSL verification for local development (eg: using self-signed certificates)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Serve static assets from the client folder
CLIENT_FOLDER=../client

# Set session secret for signing cookies (replace with a strong secret)
SESSION_SECRET=session-secret

# DB connection settings
DB_DIALECT=sqlite
DB_STORAGE=../database.sqlite

# Postgres connection settings
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=postgres
# PGUSER=postgres
# PGPASSWORD=postgres

# Email settings
EMAIL_ADMIN=
EMAIL_SENDER=
SMTP_HOST=
SMTP_PORT=25
SMTP_USER=
SMTP_PASSWORD=

# OAuth login settings
OAUTH_PROVIDER_ENABLED=true # Set to true to enable a local OAuth provider for development
OAUTH_CLIENT_ID=oauth-client-id
OAUTH_CLIENT_SECRET=oauth-client-secret
OAUTH_DISCOVERY_URL=https://localhost/api/oauth/.well-known/openid-configuration
OAUTH_CALLBACK_URL=https://localhost/api/login

# External APIs
GEMINI_API_KEY=
BRAVE_SEARCH_API_KEY=
DATA_GOV_API_KEY=
CONGRESS_GOV_API_KEY=

# Usage Limits
DEFAULT_USAGE_LIMIT=5
USAGE_RESET_SCHEDULE="0 0 * * 0"
