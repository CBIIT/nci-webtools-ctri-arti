{
  "name": "research-optimizer",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared",
    "database",
    "gateway",
    "cms",
    "agents",
    "users",
    "server"
  ],
  "scripts": {
    "start": "npm start -w server",
    "start:gateway": "npm start -w gateway",
    "start:cms": "npm start -w cms",
    "start:agents": "npm start -w agents",
    "start:users": "npm start -w users",
    "test": "npm test -w server",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:dev": "npx @electric-sql/pglite-socket",
    "db:dev:persistent": "npx @electric-sql/pglite-socket --db=./data/pglite --port=5433",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0"
  }
}
