{
  "name": "research-optimizer",
  "private": true,
  "type": "module",
  "workspaces": ["shared", "database", "gateway", "cms", "agents", "users", "server"],
  "scripts": {
    "start": "npm start -w server",
    "start:gateway": "npm start -w gateway",
    "start:cms": "npm start -w cms",
    "start:agents": "npm start -w agents",
    "start:users": "npm start -w users",
    "test": "npm test -w server",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "prettier": "^3.8.0"
  }
}
